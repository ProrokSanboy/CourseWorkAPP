<Window x:Class="CourseWorkAPP.Windows.premisesAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWorkAPP.Windows"
        mc:Ignorable="d"
        Title="Добавить помещение" Height="200" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <StackPanel Margin="10,10,10,10" Width="auto" Height="auto" VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
            <Label Content="Название:" Margin="0,0,10,0" Width="100"/>
            <TextBox x:Name="premisesName" Width="290"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"  Margin="0,5,0,5">
            <Label Content="Описание:" Margin="0,0,10,0" Width="100"/>
            <TextBox x:Name="premisesDescription" Width="290"/>
        </StackPanel>
        <Button Content="Добавить" Click="AddClick" x:Name="actionButton" Margin="110,1,0,0"/>
    </StackPanel>
</Window>
